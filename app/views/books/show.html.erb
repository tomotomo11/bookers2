<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <!-- モックのため、固定値や未実装になっている部分があります。アプリ完成前に修正しましょう。 -->
        <table class='table'>
          <tr>
            <%= image_tag 'default-image.jpg' %>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>  <!-- 固定値 -->
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>  <!-- 固定値 -->
          </tr>
        </table>
        <div class='row'>
         <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <!-- form_withを用いて新規投稿フォームを作成しましょう。 -->
        <%= form_with model: @book do |f| %>
        <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :opinion %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Book detail</h2>

        <table class='table table-hover table-inverse'>
          <tbody>
            <tr>
              <td>
                <%= image_tag @books.user.get_profile_image(80,80) %><br>
                <%= link_to @books.user.name, user_path(@books.user.id) %>
              </td>
              <td>
                <%= link_to book_path(@books.id) do %>
                <%= @books.title %>
                <% end %>
              </td>
              <td><%= @books.opinion %></td>
              <td>
                <% if @books.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@books.id) %>
                <% end %>
              </td>
              <td>
                <% if @books.user == current_user %>
                  <%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？"  %>
                <% end %>
              </td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>