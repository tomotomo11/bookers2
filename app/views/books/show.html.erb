<main>
  <p id="notice"><%= flash[:notice] %></p>
      <%= render 'user_info', user: @books.user %>
        <h2>Book detail</h2>

        <table class='table table-hover table-inverse'>
          <tbody>
            <tr>
              <td>
                <%= link_to(image_tag(@books.user.get_profile_image(80,80)), user_path(@books.user.id)) %><br>
                <%= link_to @books.user.name, user_path(@books.user.id) %>
              </td>
              <td>
                <%= link_to book_path(@books.id) do %>
                <%= @books.title %>
                <% end %>
              </td>
              <td><%= @books.body %></td>
              <td class="btn-edit">
                <% if @books.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@books.id) %>
                <% end %>
              </td>
              <td class="btn-destroy">
                <% if @books.user == current_user %>
                  <%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に消しますか？"  %>
                <% end %>
              </td>
              <td></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>